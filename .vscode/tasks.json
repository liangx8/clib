{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "编译项目",
			"command": "make",
			"options": {
				"cwd": "${workspaceFolder}/src"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {"isDefault": true,"kind": "build"},

			"detail": "。。。"
		},{
			"label": "清除",
			"type": "shell",
			"command":"make",
			"args": ["clean"],
			"options": {
				"cwd": "${workspaceFolder}/src"
			},
			"problemMatcher":[],
			"detail": "cleaning"
		},{
			"type": "shell",
			"label": "跟踪代码",
			"command": "make",
			"args": ["OPTC=-g"],
			"options": {
				"cwd": "${workspaceFolder}/src"
			},
			"problemMatcher": [
				"$gcc"
			],
			"detail": "编译调试，跟踪程序"

		}
	]
}